extends layout

block content
  include partials/navbar.pug
  main
    .hero_in.shop_detail
      .wrapper
        span.magnific-gallery
          a.btn_photos(href='img/gallery/hotel_list_1.jpg', title='Photo title', data-effect='mfp-zoom-in') View photos
          a.btn_bookmark
            | Bookmark
            span.icon-heart(style="font-size : 2em")
          a(href='img/gallery/hotel_list_2.jpg', title='Photo title', data-effect='mfp-zoom-in')
          a(href='img/gallery/hotel_list_3.jpg', title='Photo title', data-effect='mfp-zoom-in')
    // /hero_in
    nav.secondary_nav.sticky_horizontal_2
      .container
        ul.clearfix
          li
            a.active(href='#description') Description
          li
            a(href='#reviews') Reviews
          li.float-right(style="border :1px red !important")
            a(href='wishlist.html')
              span Bookmark
          li
            a(href='#sidebar') Booking
    .container.margin_60_35
      .row
        .col-lg-8
          section#description
            .detail_title_1
              h1= listing.title
              a.address(href='https://www.google.com/maps/dir//Assistance+–+Hôpitaux+De+Paris,+3+Avenue+Victoria,+75004+Paris,+Francia/@48.8606548,2.3348734,14z/data=!4m15!1m6!3m5!1s0x47e66e1de36f4147:0xb6615b4092e0351f!2sAssistance+Publique+-+Hôpitaux+de+Paris+(AP-HP)+-+Siège!8m2!3d48.8568376!4d2.3504305!4m7!1m0!1m5!1m1!1s0x47e67031f8c20147:0xa6a9af76b1e2d899!2m2!1d2.3504327!2d48.8568361')= listing.info.address
            p= listing.description
            h5.add_bottom_15 Brands
            .row.add_bottom_30
              .col-md-12
                ul.bullets
                  each tag in listing.tags                 
                    li.ml-1.list-inline-item= tag
            // /row
            .opening
              .ribbon
                span.open Now Open
              .test
                h3.icon_clock_alt.mr-2.d-inline-block
                h4.d-inline-block Opening Hours
              .row
                - var hours3 = Object.entries( listing.hours ).slice(0 ,4);
                - var hours4 = Object.entries( listing.hours ).slice(4);
                .col-md-6
                  each hour in hours3
                    ul
                      li
                        | #{hour[0].toUpperCase()}
                        if ( hour[1][0].includes('open') || hour[1][1].includes('clos') )
                          span Closed
                        else  
                          span #{hour[1][0]} - #{hour[1][1]}
                .col-md-6
                  each hour in hours4
                    ul
                      li
                        | #{hour[0].toUpperCase()}
                        if ( hour[1][0].includes('open') || hour[1][1].includes('clos') )
                          span Closed
                        else  
                          span #{hour[1][0]} - #{hour[1][1]}
            hr
            h3 Location
            #map.map.map_single.add_bottom_45
            // End Map
            // /section
            section#reviews
              hr
              h2 Reviews
              .reviews-container.add_bottom_30
                .row
                  .col-lg-3
                    #review_summary
                      strong 8.5
                      em Superb
                      small Based on 4 reviews
                  .col-lg-9
                    .row
                      .col-lg-10.col-9
                        .progress
                          .progress-bar(role='progressbar', style='width: 90%', aria-valuenow='90', aria-valuemin='0', aria-valuemax='100')
                      .col-lg-2.col-3
                        small
                          strong 5 stars
                    // /row
                    .row
                      .col-lg-10.col-9
                        .progress
                          .progress-bar(role='progressbar', style='width: 95%', aria-valuenow='95', aria-valuemin='0', aria-valuemax='100')
                      .col-lg-2.col-3
                        small
                          strong 4 stars
                    // /row
                    .row
                      .col-lg-10.col-9
                        .progress
                          .progress-bar(role='progressbar', style='width: 60%', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100')
                      .col-lg-2.col-3
                        small
                          strong 3 stars
                    // /row
                    .row
                      .col-lg-10.col-9
                        .progress
                          .progress-bar(role='progressbar', style='width: 20%', aria-valuenow='20', aria-valuemin='0', aria-valuemax='100')
                      .col-lg-2.col-3
                        small
                          strong 2 stars
                    // /row
                    .row
                      .col-lg-10.col-9
                        .progress
                          .progress-bar(role='progressbar', style='width: 0', aria-valuenow='0', aria-valuemin='0', aria-valuemax='100')
                      .col-lg-2.col-3
                        small
                          strong 1 stars
                    // /row
                    // /row
              .reviews-container
                .review-box.clearfix
                  figure.rev-thumb
                    img(src='img/avatar3.jpg', alt='')
                  .rev-content
                    .rating
                      i.icon-star.voted
                      i.icon_star.voted
                      i.icon_star.voted
                      i.icon_star.voted
                      i.icon_star
                    .rev-info
                      | Sara – March 31, 2016:
                    .rev-text
                      p
                        | Sed eget turpis a pede tempor malesuada. Vivamus quis mi at leo pulvinar hendrerit. Cum sociis natoque penatibus et magnis dis
                // /review-box
                // /review-container
                // /section
                hr
                if !currentUser
                  .box_detail.booking
                    .price
                      h5.d-inline Rate and Write Reviews
                    h3
                      p(style="font-weight:lighter") You need to log in to write reviews
                    a#submit-contact-detail.add_top_30.btn_1.half-width.purchase(href="/register")
                      | Log In
                else
                  .add-review
                    h5 Leave a Review
                    form(action="POST" method=`/rating/${listing.slug}`)
                      .row
                        .form-group.col-md-6
                          label Rating 
                          .custom-select-form
                            select#rating_review.wide(name='rating')
                              option(value='1' selected) 1 (Lowest)
                              option(value='2') 2
                              option(value='3') 3
                              option(value='4') 4
                              option(value='5') 5 (Highest)
                        .form-group.col-md-12
                          label Your Review
                          textarea#review_text.form-control(name='content', style='height:130px;')
                        .form-group.col-md-12.add_top_20.add_bottom_30
                          input#submit-review.btn_1(type='submit', value='Submit')
        // /col
        aside#sidebar.col-lg-4
          .box_detail.booking
            .price
              h5.d-inline Contact us
              .score
                span
                  | Good
                  em 350 Reviews
                strong 7.0
            #message-contact-detail
            form#contact_detail(method='post', action='', autocomplete='off')
              .form-group
                input#name_detail.form-control(type='text', placeholder='Name', name='name' required)
                i.ti-user
              .form-group
                input#email_detail.form-control(type='email', placeholder='Email', name='email' required)
                i.icon_mail_alt
              .form-group
                textarea#message_detail.form-control(placeholder='Your message', name='message' required)
                i.ti-pencil
              .form-group
                input#submit-contact-detail.add_top_30.btn_1.full-width.purchase(type='submit', value='Contact us')
          ul.share-buttons
            li
              a.fb-share(href='#0')
                i.social_facebook
                |  Share
            li
              a.twitter-share(href='#0')
                i.social_twitter
                |  Tweet
            li
              a.gplus-share(href='#0')
                i.social_googleplus
                |  Share
      // /row
      // /container
  include partials/footer.pug

