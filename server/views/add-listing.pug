extends admin-layout

block content
  include partials/admin-nav.pug
  .content-wrapper
    .container-fluid
      include partials/bread-crumb.pug
      form(method="post" action="/admin/add-listing")   
        .box_general.padding_bottom
          .header_box.version_2
            h2
              i.fa.fa-file
              |Add Listing
          .asterisk.my-3(style="color:red;")
            | * Required Fields   
          .row
            .col-md-6
              .form-group
                bold(style="color:red") * 
                label Listing Title
                input.form-control(type='text', name='title', placeholder='Hotel Mariott' required)
            .col-md-6
              .form-group
                bold(style="color:red") * 
                label Category
                .styled-select
                  select(name="category" required)
                    option Hotel
                    option Shops
                    option Restaurant
                    option Bar
          .row
            .col-md-6
              .form-group
                bold(style="color:red") * 
                label Tags
                input.form-control(type='text', placeholder='Tags MUST be separated by commas' name='tags' required)
          .row
            .col-md-12
              .form-group
                bold(style="color:red") * 
                label Description
                .editor
                  textarea.form-control.note-codable(role='textbox', aria-multiline='true' name="description" rows="5" required)
          .row
            .col-md-4
              .form-group
                bold(style="color:red") * 
                label Phone Number
                input.form-control(type='text' name='info[number]' required)
            .col-md-4
              .form-group
                label Web site
                input.form-control(type='text' name='info[website]')
            .col-md-4
              .form-group
                bold(style="color:red") * 
                label Email
                input.form-control(type='text' name='info[email]' required)
          .row
            .col-md-4
              .form-group
                label Facebook link (Optional)
                input.form-control(type='text' name='social_media[facebook]')
            .col-md-4
              .form-group
                label Twitter link (Optional)
                input.form-control(type='text' name='social_media[twitter]')
          .row
            .col-md-12
              .form-group
                label Photos
        .box_general.padding_bottom
          .header_box.version_2
            h2
              i.fa.fa-map-marker
              |Location
          .row
            .col-md-6
              .form-group
                bold(style="color:red") * 
                label Select State
                .styled-select
                  select(name="info[state]" required)
                    option Lagos
                    option Abuja
            .col-md-6
              .form-group
                bold(style="color:red") * 
                label Address
                input.form-control(type='text', placeholder='ex. 250, Fifth Avenue...' name='info[address]' required)
        .box_general.padding_bottom
          .header_box.version_2
            h2 
              i.fa.fa-clock-o
              |Hours
          - const day = ["monday","tuesday","wednesday","thursday","friday","saturday","sunday"];
          each days in day
            .row
              .col-md-2
                label.fix_spacing #{days}
              .col-md-5
                .form-group
                  .styled-select
                    select(name=`hours[${days}]` required)
                      option Opening Time
                      option Closed
                      option 1 AM
                      option 2 AM
                      option 3 AM
                      option 4 AM
                      option 5 AM
                      option 6 AM
                      option 7 AM
                      option 8 AM
                      option 9 AM
                      option 10 AM
                      option 11 AM
                      option 12 AM
                      option 1 PM
                      option 2 PM
                      option 3 PM
                      option 4 PM
                      option 5 PM
                      option 6 PM
                      option 7 PM
                      option 8 PM
                      option 9 PM
                      option 10 PM
                      option 11 PM
                      option 12 PM
              .col-md-5
                .form-group
                  .styled-select
                    select(name=`hours[${days}]` required)
                      option Closing Time
                      option Closed
                      option 1 AM
                      option 2 AM
                      option 3 AM
                      option 4 AM
                      option 5 AM
                      option 6 AM
                      option 7 AM
                      option 8 AM
                      option 9 AM
                      option 10 AM
                      option 11 AM
                      option 12 AM
                      option 1 PM
                      option 2 PM
                      option 3 PM
                      option 4 PM
                      option 5 PM
                      option 6 PM
                      option 7 PM
                      option 8 PM
                      option 9 PM
                      option 10 PM
                      option 11 PM
                      option 12 PM
          // /row
          // /row
          // /box_general
        .box_general.padding_bottom
          .header_box.version_2
            h2
              i.fa.fa-dollar
              |Pricing
          .row
            .col-md-12
              h6 Item
              table#pricing-list-container(style='width:100%;')
                tbody
                  tr.pricing-list-item
                    td
                      .row
                        .col-md-4
                          .form-group
                            input.form-control(type='text', placeholder='Title')
                        .col-md-4
                          .form-group
                            input.form-control(type='text', placeholder='Description')
                        .col-md-2
                          .form-group
                            input.form-control(type='text', placeholder='Price')
                        .col-md-2
                          .form-group
                            a.delete(href='#')
                              i.fa.fa-fw.fa-remove
              a.btn_1.gray.add-pricing-list-item(href='#0')
                i.fa.fa-fw.fa-plus-circle
                |Add Item
          // /row
          // /box_general
        button.btn.btn-primary.btn_1.medium(type="submit") Save
  include partials/admin-footer.pug