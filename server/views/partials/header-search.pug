header.header_in.header-menu_fixed
  .container
    .row
      .col-lg-3.col-12
        #logo
          a.d-md-flex(href='/', title='Hotspot - Find the hottest places in Lagos')
            img.mt-2.mt-md-0.img-nav.mr-2(src='/img/flame.png')
            h3.mt-2.mb-0.text-dark.logo-text.profile-custom Hotspot
      .col-lg-9.col-12
        ul#top_menu
          li.d-flex
            if !currentUser 
              a#sign-in.login.w-7.profile-custom(href='#sign-in-dialog', title='Sign In') Sign In
            else
              a.sign-out.profile-custom(href='/signout', title='Sign Out') Sign Out
          li
            a.wishlist_bt_top(href='/bookmarks', title='Your wishlist') Your bookmarks
        // /top_menu
        a.btn_mobile(href='#menu')
          #hamburger.hamburger.hamburger--spin
            .hamburger-box
              .hamburger-inner
        nav#menu.main-menu
          ul
            li
              span
                a(href='/') Home
            li
              span
                a(href='/listings') Listings
            li
              span
                if !currentUser 
                  a.d-md-none.login(href='#sign-in-dialog', title='Sign In') Sign In
                else
                  a.d-md-none(href='/signout', title='Sign Out') Sign Out
            li
              a.d-md-none(href='/bookmarks', title='Your wishlist') Bookmarks
