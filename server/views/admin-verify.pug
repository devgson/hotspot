extends admin-layout

block content
  include partials/admin-nav.pug  
  .content-wrapper
    .container-fluid
      // Breadcrumbs
      ol.breadcrumb
        li.breadcrumb-item
          a(href='#') Dashboard
        li.breadcrumb-item.active Claimed Listings
      .box_general
        .header_box
          h2.d-inline-block Claimed Listings
          //.filter
            select.selectbox(name='orderby')
              option(value='Any time') Any time
              option(value='Latest') Latest
              option(value='Oldest') Oldest
        .list_general
          ul
            if verifications
              each verification in verifications
                li.pb-3
                  figure
                    img(src= verification.listing.images[0] ? verification.listing.images[0] : '/img/blog-3.jpg', alt='')
                  h4 #{verification.listing.title} 
                    i(class=`${verification.verification_status === 'verified' ? "approved" : "cancel"}`) #{verification.verification_status}
                  p

                  ul.buttons
                    li.mr-2
                      a.btn_1.gray(href=`/admin/verification/${verification._id}`)
                        i.fa.fa-fw.fa-eye
                        | Claim Details
          // /box_general
      //nav(aria-label='...')
        ul.pagination.pagination-sm.add_bottom_30
          li.page-item.disabled
            a.page-link(href='#', tabindex='-1') Previous
          li.page-item
            a.page-link(href='#') 1
          li.page-item
            a.page-link(href='#') 2
          li.page-item
            a.page-link(href='#') 3
          li.page-item
            a.page-link(href='#') Next
      // /pagination
      // /container-fluid
  include partials/admin-footer.pug