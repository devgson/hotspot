extends layout

block content
  include partials/navbar.pug
  main.pt-7
    .container.margin_60
      .row.justify-content-center
        .col-xl-6.col-lg-6.col-md-8
          .box_account
            h3.client Existing User?
            if flashes.signinError
              .alert.alert-danger.alert-dismissible.fade.show
                p.mb-0 Error : #{flashes.signinError}
            form.form_container(method="POST" action="/signin")
              .row.no-gutters
                .col-lg-6.pr-lg-1
                  a.social_bt.facebook(href='#0') Login with Facebook
                .col-lg-6.pl-lg-1
                  a.social_bt.google(href='#0') Login with Google
              .divider
                span Or
              .form-group
                label * Email
                input.form-control(type='email', name='email')
              .form-group
                label * Password
                input#password_in.form-control(type='password', name='password')
              .clearfix.add_bottom_15
                //.checkboxes.float-left
                  label.container_check
                    | Remember me
                    input(type='checkbox')
                    span.checkmark
                //.float-right
                  a#forgot(href='javascript:void(0);') Lost Password?
              .text-center
                input.btn_1.full-width(type='submit', value='Log In')
              //#forgot_pw
                .form-group
                  input#email_forgot.form-control(type='email', name='email_forgot', placeholder='Type your email')
                p A new password will be sent shortly.
                .text-center
                  input.btn_1(type='submit', value='Reset Password')
            // /form_container
            // /box_account
            .row.hidden_tablet
            // /row
        .col-xl-6.col-lg-6.col-md-8
          .box_account
            h3.new_client New User?
            small.float-right.pt-2 * Required Fields
            if flashes.signupError
              .alert.alert-danger.alert-dismissible.fade.show
                p.mb-0 Error : #{flashes.signupError}
            form.form_container.form-row(method="POST" action="/signup")
              .form-group.col-lg-6.col-md-6.col-12
                label * First Name
                input.form-control(type='text', name='first_name' required)
              .form-group.col-lg-6.col-md-6.col-12
                label * Last Name
                input.form-control(type='text', name='last_name' required)
              //.form-group.col-lg-6.col-md-6.col-12
                label * Phone Number
                input.form-control(type='phone', name='phone' required)
              .form-group.col-lg-6.col-md-6.col-12
                label * Country
                .custom-select-form
                  select#country.wide.add_bottom_10(name='location.country')
                    option(value='Nigeria') Nigeria
              .form-group.col-lg-12.col-md-12.col-12
                label * Email
                input#email.form-control(type='email', name='email' required)
              .form-group.col-lg-12.col-md-12.col-12
                label * Password
                input.form-control(type='password', name='password' required)
              .form-group.col-lg-12.col-md-12.col-12
                label * Confirm Password
                input.form-control(type='password', name='confirm_password' required)
              .form-group.col-lg-12.col-md-12.col-12
                .text-center
                input.btn_1.full-width(type='submit', value='Sign Up')
              //.form-group
                label.container_radio(style='display: inline-block; margin-right: 15px;')
                  | Private
                  input(type='radio', name='client_type', checked='', value='private')
                  span.checkmark
                label.container_radio(style='display: inline-block;')
                  | Company
                  input(type='radio', name='client_type', value='company')
                  span.checkmark
              //.private.box
                .row.no-gutters
                  .col-6.pr-1
                    .form-group
                      input.form-control(type='text', placeholder='Name*')
                  .col-6.pl-1
                    .form-group
                      input.form-control(type='text', placeholder='Last Name*')
                  .col-12
                    .form-group
                      input.form-control(type='text', placeholder='Full Address*')
                // /row
                .row.no-gutters
                  .col-6.pr-1
                    .form-group
                      input.form-control(type='text', placeholder='City*')
                  .col-6.pl-1
                    .form-group
                      input.form-control(type='text', placeholder='Postal Code*')
                  .col-12
                    .form-group
                      .custom-select-form
                        select#country.wide.add_bottom_10(name='country')
                          option(value='', selected='') Country*
                          option(value='Europe') Europe
                          option(value='United states') United states
                          option(value='Asia') Asia
                // /row
                .row
                  .col-md-12
                    .form-group
                      input.form-control(type='text', placeholder='Telephone *')
                // /row
                // /privato
                .company.box(style='display: none;')
                  .row.no-gutters
                    .col-12
                      .form-group
                        input.form-control(type='text', placeholder='Company Name*')
                    .col-12
                      .form-group
                        input.form-control(type='text', placeholder='Full Address')
                  // /row
                  .row.no-gutters
                    .col-6.pr-1
                      .form-group
                        input.form-control(type='text', placeholder='City*')
                    .col-6.pl-1
                      .form-group
                        input.form-control(type='text', placeholder='Postal Code*')
                    .col-12
                      .form-group
                        .custom-select-form
                          select#country.wide.add_bottom_10(name='country')
                            option(value='', selected='') Country*
                            option(value='Europe') Europe
                            option(value='United states') United states
                            option(value='Asia') Asia
                  // /row
                  .row
                    .col-md-12
                      .form-group
                        input.form-control(type='text', placeholder='Telephone *')
                  // /row
                  // /azienda
                  hr
                  .form-group
                    label.container_check
                      | Accept 
                      a(href='#0') Terms and conditions
                      input(type='checkbox')
                      span.checkmark
                  .text-center
                    input.btn_1.full-width(type='submit', value='Register')
            // /form_container
            // /box_account
            // /row
            // /container
    script.
      /*setTimeout(function(){
        $('.alert').alert('close')
      }, 5000)*/
  include partials/footer.pug
